@model Lab2_PWA_Juegos.Models.EntranceModel

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de que quieres eliminar esto?</h3>
<div>
    <h4>Modelo de Entrada</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Identificación de la entrada
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EntranceID)
        </dd>
        <dt class="col-sm-2">
            Producto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Products.PName)
        </dd>
        <dt class="col-sm-2">
            Proveedor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Suppliers.SName)
        </dd>
        <dt class="col-sm-2">
            Cantidad
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            Precio unitario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnitPrice)
        </dd>
        <dt class="col-sm-2">
            Total
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class="col-sm-2">
            Fecha de entrada
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EDate)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.HiddenFor(model => model.EntranceID)
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
