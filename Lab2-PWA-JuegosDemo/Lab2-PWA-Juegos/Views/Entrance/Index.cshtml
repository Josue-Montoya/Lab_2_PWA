@model IEnumerable<Lab2_PWA_Juegos.Models.EntranceModel>

@{
    ViewData["Title"] = "Entrance";
}

<h1>Entradas</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="mt-3 mb-3">
                <a asp-action="Create" asp-controller="Entrance" class="btn btn-success">Agregar Nuevo</a>
            </div>
            <table class="table table-bordered table-striped table-responsive" id="EntranceTable">
                <thead>
                    <tr>
                        <th>
                            Producto
                        </th>
                        <th>
                            Proveedor
                        </th>
                        <th>
                            Cantidad
                        </th>
                        <th>
                            Precio Unitario
                        </th>
                        <th>
                            Total
                        </th>
                        <th>
                            Fecha de Entrada
                        </th>
                        <th>
                            Acciones
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Products.PName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Suppliers.SName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UnitPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Total)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EDate)
                            </td>
                            <td>
                                <a asp-controller="Entrance"
                                   asp-action="Edit"
                                   asp-route-id="@item.EntranceID"
                                   class="btn btn-primary">
                                    Editar
                                </a>
                                <a asp-controller="Entrance"
                                   asp-action="Delete"
                                   asp-route-id="@item.EntranceID"
                                   class="btn btn-danger">
                                    Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @if (TempData["createentrance"] != null)
    {
        <script>
            Toastify({
                text: "Se agrego con exito",
                duration: 3000,
                newWindow: true,
                gravity: "top",
                position: "right",
                stopOnFocus: true,
                style: {
                    background: "linear-gradient(to right, #00b09b, #96c93d)",
                },
            }).showToast();
        </script>
    }

    @if (TempData["editdentrance"] != null)
    {
        <script>
            Toastify({
                text: "Se edito con exito",
                duration: 3000,
                newWindow: true,
                gravity: "top",
                position: "right",
                stopOnFocus: true,
                style: {
                    background: "linear-gradient(to right, #00b09b, #96c93d)",
                },
            }).showToast();
        </script>
    }

    @if (TempData["deleteentrance"] != null)
    {
        <script>
            Toastify({
                text: "Se elimino con exito",
                duration: 3000,
                newWindow: true,
                gravity: "top",
                position: "right",
                stopOnFocus: true,
                style: {
                    background: "linear-gradient(to right, #00b09b, #96c93d)",
                },
            }).showToast();
        </script>
    }

    <script>
        $(document).ready(function () {
            $("#EntranceTable").DataTable({
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'csv',
                        exportOptions: {
                            columns: ':not(:last-child)'
                        }
                    },
                    {
                        extend: 'pdf',
                        exportOptions: {
                            columns: ':not(:last-child)'
                        }
                    },
                    {
                        extend: 'excel',
                        exportOptions: {
                            columns: ':not(:last-child)'
                        }
                    }
                ],
                columnDefs: [
                    {
                        targets: 6,
                        orderable: false,
                        searchable: false
                    }
                ],
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json'
                }
            });
        });
    </script>
}