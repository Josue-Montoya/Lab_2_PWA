@model Lab2_PWA_Juegos.Models.DepartureModel

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de que quieres eliminar esto?</h3>
<div>
    <h4>Modelo de Salida</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Identificación de la salida
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartureID)
        </dd>
        <dt class="col-sm-2">
            Producto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Products.PName)
        </dd>
        <dt class="col-sm-2">
            Empleado
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employees.EName)
        </dd>

        <dt class="col-sm-2">
            Cantidad
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            Precio unitario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnitPrice)
        </dd>
        <dt class="col-sm-2">
            Total
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class="col-sm-2">
            Fecha de salida
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DDate)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.HiddenFor(model => model.DepartureID)
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
